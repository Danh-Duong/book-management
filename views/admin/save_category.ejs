<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DASHMIN - Bootstrap Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/images/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style_admin.css" rel="stylesheet">
    <style>
        .modal.show {
            display: block !important;
            opacity: 1 !important;
            visibility: visible !important;
            z-index: 0;
        }

        .modal-backdrop {
            display: block !important; /* Ensures the backdrop stays visible */
        }

        .modal-dialog-centered {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .modal-content {
            max-width: 500px;
            margin: 0 auto;
        }

        .modal-dialog {
            margin-top: -50px !important; 
            margin-bottom: 0 !important; 
        }

        .modal-footer{
            border-top: none !important;
            padding: 0 !important;
            padding-bottom: 10px !important;

        }

        .modal-footer button{
            border: none;
            border-radius: 5px;
        }

        textarea {
            height: 120px !important;
            resize: vertical !important; 
        }

    </style>
</head>

<body>

    <div class="container-xxl position-relative bg-white d-flex p-0">
        <%- include('./view_base') %>
            <!-- Content Start -->
            <div class="content">
                <div class="col-12">
                    <div class="bg-light d-flex align-items-center justify-content-between p-2">
                        <div class="ms-3">
                            <a href="#" class="sidebar-toggler flex-shrink-0 fa-2x">
                                <i class="fa fa-bars"></i>
                            </a>
                            <span class="p-2">Manage category</span>
                        </div>
                    </div>
                </div>

                <div class="container-fluid pt-4">
                    <div class="modal show" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <h4 class="text-center pb-1">Save Category</h4>
                                    <form action="<%=action === 'add' ? 'store' : '/admin/categories/save/' + data.id %>" method="post">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="floatingInput" placeholder="Id" required
                                                name="id" value="<%= data.id %>" <%= action === 'add' ? '' : 'disabled' %>>
                                            <label for="floatingInput">ID</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="floatingInput" required
                                                placeholder="Name" name="name" value="<%= data.name%>">
                                            <label for="floatingInput">Name</label>
                                        </div>
                
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control desc" rows="3" id="floatingInput"
                                                placeholder="Description" name="desc" value="<%= data.desc%>"></input>
                                            <label for="floatingInput">Description</label>
                                        </div>
                
                                        <% if (error) { %>
                                            <p style="color: rgb(172, 37, 37); font-weight: bold; margin-left: 2px;">
                                                <%= error %>
                                            </p>
                                        <% } %>
                
                                        <div class="modal-footer">
                                            <button type="submit"
                                                class="bg-success w-100 text-white p-2">Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Table End -->
            </div>
            <!-- Content End -->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/chart/chart.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
</body>

</html>