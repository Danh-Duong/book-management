<body>

    <div class="container-xxl position-relative bg-white d-flex p-0">
        <%- include('./view_base') %>
            <!-- Content Start -->
            <div class="content">

                <div class="col-12">
                    <div class="bg-light d-flex align-items-center justify-content-between p-2">
                        <div class="ms-3">
                            <a href="#" class="sidebar-toggler flex-shrink-0 fa-2x">
                                <i class="fa fa-bars"></i>
                            </a>
                            <span class="p-2">Manage book / Detail book</span>
                        </div>
                    </div>
                </div>




                <!-- Form Start -->
                <div class="container-fluid d-flex justify-content-center mt-5 mb-5" style="min-height: 100vh;">
                    <div class="row w-100">
                        <div class="col-12 mx-auto">
                            <div class="bg-light rounded shadow h-100 p-4">
                                <h6 class="mb-4 text-uppercase ">Detail book</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4 class="section-title divider mt-5">title</h4>
                                        <div class="product-content">
                                            <p><strong>Description:</strong> description</p>
                                            <p><strong>Price:</strong> price</p>
                                            <p><strong>Publisher:</strong> Publisher</p>
                                            <p><strong>Number:</strong> Number</p>
                                            <p><strong>Year of Publication:</strong> YoP</p>

                                            <p><strong>Author:</strong> name</p>
                                            <p><strong>Category:</strong> category</p>
                                            <p><strong>Created At:</strong>created at</p>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <img src="/images/main-banner1.jpg" class="single-image">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Form End -->




            </div>
            <!-- Content End -->



    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
