<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DASHMIN - Bootstrap Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/images/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style_admin.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Heebo', sans-serif;
            background-color: #f8f9fa;
        }

        .container-xxl {
            background-color: #fff;
        }

        .content {
            padding: 30px;
        }

        .form-floating input,
        .form-floating select,
        .form-floating textarea {
            border-radius: 8px;
            border: 1px solid #ced4da;
        }

        .form-floating label {
            font-weight: bold;
        }

        .form-group button {
            background-color: #ff9f00;
            border: none;
            color: white;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            width: 100%;
        }

        .form-group button:hover {
            background-color: #e68900;
        }

        .form-group button:focus {
            outline: none;
        }

        .modal-content {
            max-width: 600px;
            margin: 0 auto;
            border-radius: 8px;
        }

        .modal-footer {
            border-top: none;
            padding: 0;
        }

        .bg-light {
            background-color: #f7f7f7 !important;
        }

        .rounded {
            border-radius: 10px;
        }

        .shadow {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-top: 20px;
        }

        .error-message {
            color: rgb(172, 37, 37);
            font-weight: bold;
            margin-left: 2px;
            margin-top: 10px;
        }
    </style>
</head>

<body>

    <div class="container-xxl position-relative bg-white d-flex p-0">
        <%- include('./view_base') %>
        <!-- Content Start -->
        <div class="content">
            <div class="col-12">
                <div class="bg-light d-flex align-items-center justify-content-between p-2">
                    <div class="ms-3">
                        <a href="#" class="sidebar-toggler flex-shrink-0 fa-2x">
                            <i class="fa fa-bars"></i>
                        </a>
                        <span class="p-2">Manage author</span>
                    </div>
                </div>
            </div>

            <!-- Form Start -->
            <div class="container-fluid pt-4 d-flex justify-content-center">
                <div class="row w-100">
                    <div class="col-12 col-md-8 col-lg-6 mx-auto">
                        <div class="bg-light rounded shadow h-100 p-4">
                            <h4 class="text-center pb-1">Save Author</h4>
                            <form action="<%= action === 'add' ? 'store' : '/admin/authors/save/' + data.id %>" method="post">
                                <!-- ID Input -->
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="Id" required
                                        name="id" value="<%= data.id %>" <%= action === 'add' ? '' : 'disabled' %>>
                                    <label for="floatingInput">ID</label>
                                </div>

                                <!-- Name Input -->
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="Name"
                                        name="name" required value="<%= data.name %>">
                                    <label for="floatingInput">Name</label>
                                </div>

                                <!-- Nationality Dropdown -->
                                <div class="form-floating mb-3">
                                    <select class="form-control" id="floatingSelect" name="nationality" aria-label="Select Nationality">
                                        <option disabled <%= !data.nationality ? 'selected' : '' %>>Select Nationality</option>
                                        <option value="Việt Nam" <%= data.nationality === 'Việt Nam' ? 'selected' : '' %>>Việt Nam</option>
                                        <option value="American" <%= data.nationality === 'American' ? 'selected' : '' %>>American</option>
                                        <option value="British" <%= data.nationality === 'British' ? 'selected' : '' %>>British</option>
                                        <option value="Russian" <%= data.nationality === 'Russian' ? 'selected' : '' %>>Russian</option>
                                        <option value="China" <%= data.nationality === 'China' ? 'selected' : '' %>>China</option>
                                    </select>
                                    <label for="floatingSelect">Nationality</label>
                                </div>

                                <!-- Birth Date Input -->
                                <div class="form-floating mb-3">
                                    <input type="date" class="form-control" id="floatingInput" placeholder="birthDate"
                                        name="birthDate" required value="<%= data.birthDate %>">
                                    <label for="floatingInput">Birth Date</label>
                                </div>

                                <!-- Description Textarea -->
                                <div class="form-floating mb-3">
                                    <textarea type="text" class="form-control" rows="3" id="floatingInput"
                                        placeholder="Description" name="desc"><%= data.desc %></textarea>
                                    <label for="floatingInput">Description</label>
                                </div>

                                <!-- Bio Textarea -->
                                <div class="form-floating mb-3">
                                    <textarea type="text" class="form-control" rows="3" id="floatingInput"
                                        placeholder="Bio" name="bio"><%= data.bio %></textarea>
                                    <label for="floatingInput">Bio</label>
                                </div>

                                <!-- Error Message -->
                                <% if (error) { %>
                                    <p class="error-message">
                                        <%= error %>
                                    </p>
                                <% } %>

                                <!-- Save Button -->
                                <div class="form-group mb-3">
                                    <button type="submit" class="btn btn-warning w-100">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Form End -->
        </div>
        <!-- Content End -->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>
